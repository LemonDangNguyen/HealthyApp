<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsHealth"
    android:gravity="center_horizontal"
    android:background="@drawable/hdbg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="64dp"
        android:layout_marginLeft="-170dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/ic_ghichu"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="287dp"
        android:layout_height="48dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-49dp"
        android:text="Thông tin chi tiết"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="23dp"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="74dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/green_box"
        >


        <TextView
            android:id="@+id/dateonweek"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Ngày--/--/---- đến ngày--/--/----"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="203dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/white_box">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:text="Năng Lượng Tiêu Thụ"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTuoi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Text 1" />

            <TextView
                android:id="@+id/txtchieucao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Text 2" />

            <TextView
                android:id="@+id/txtCannang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Text 3" />

        </LinearLayout>


        <TextView
            android:id="@+id/bmr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BRM: "
            android:textSize="35sp"
            android:layout_gravity="center"/>
        <TextView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMR= 88.362 + (13.397 x kg) + (4.799 x cm) - (5.677 x age)"
            android:textSize="15sp"
            android:layout_gravity="center"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="226dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/white_box"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="BMI"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chieucaobmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chieu cao: "/>
            <TextView
                android:id="@+id/cannangbmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can Nang: "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yourBMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI: "
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/noteYourBMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhan Xet"
                android:textSize="30sp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="635dp">


        <ImageView
            android:id="@+id/btnhomedt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btndetailsdt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_ghichu"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btnpracticedt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_tich"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btnsettingdt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_caidat"/>
    </LinearLayout>







</LinearLayout>