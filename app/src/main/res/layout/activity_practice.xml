<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practice"
    android:gravity="center_horizontal"
    android:background="@drawable/hdbg"
    android:orientation="vertical">

<LinearLayout
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_3" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Theo dõi hoạt động"
        android:textSize="29sp"
        android:textStyle="bold" />

</LinearLayout>



    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="64dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/green_box"
>


        <TextView
            android:gravity="center"
            android:id="@+id/getday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Ngày--/--/---- đến ngày--/--/----"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="124dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:background="@drawable/white_box">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:text="Bộ đếm bước chân"
            android:textSize="17sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Bước Chân đạt yêu cầu từ 8000-10000 bước "
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã Thực Hiện: "
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/noteSteps"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã đạt mục tiêu "
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="115dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/white_box">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:text="@string/huyet_ap"
            android:textSize="17sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huyết áp ổn định ở mức 80-120mmHg"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huyết Áp Của Bạn: "
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txthuyetAp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huyết áp của bạn ở Mức: "
                android:textSize="15sp"/>
                <TextView
                    android:id="@+id/noteHuyetAp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="111dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/white_box">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:text="Nhịp tim "
            android:textSize="17sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhịp tim ổn định ở 60-100 lần/phút "
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhịp Tim Của : "
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/nhipTimtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhịp TIm Ở Mức: "
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/noteTim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15sp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="110dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/white_box">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:text="Năng lượng tiêu thụ"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:text="Đang Cập Nhật"
            android:textSize="13sp"
            android:textStyle="italic" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="635dp">


        <ImageView
            android:id="@+id/btnhomep"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btndetailsp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_ghichu"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btnpracticep"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_tich"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btnsettingp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_caidat"/>
    </LinearLayout>




</LinearLayout>