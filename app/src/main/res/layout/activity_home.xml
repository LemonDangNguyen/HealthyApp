<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/background_content_top"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageavatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_person"
            android:padding="10dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textNameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tên người dùng"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/green_box2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/thongke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="18dp"
                    android:text="Báo cáo cuối cùng"
                    android:textColor="#124735"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="220dp"
                android:layout_height="34dp"
                android:background="@drawable/temp_box"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/thoitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Thêm"
                    android:textColor="#124735"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/blue_box"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_huyetap"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huyết áp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:backgroundTint="#5ed0d1"
            android:outlineSpotShadowColor="#5ed0d1"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-12dp"/>

        <TextView
            android:id="@+id/huyetap"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="--/--mmHg"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/red_box2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_nhiptim"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhịp tim"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:backgroundTint="#f8958c"
            android:outlineSpotShadowColor="#f8958c"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-12dp"/>

        <TextView
            android:id="@+id/nhiptim"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="---BPM"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/yellow_box"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/step"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:backgroundTint="#ffe681"
            android:outlineSpotShadowColor="#ffe681"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-12dp"/>

        <TextView
            android:id="@+id/buocchan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="--mmol/L"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/purple_box"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cannang"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_nang"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:backgroundTint="#c5c5ff"
            android:outlineSpotShadowColor="#c5c5ff"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-12dp"/>

        <TextView
            android:id="@+id/cannang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="--kg/m2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@drawable/background_button"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnhomeh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btndetailsh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_ghichu"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btnpracticeh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_tich"
            android:layout_marginRight="28dp"/>

        <ImageView
            android:id="@+id/btnsettingh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_caidat"/>
    </LinearLayout>


</LinearLayout>