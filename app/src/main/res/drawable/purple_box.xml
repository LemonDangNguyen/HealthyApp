<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

<!--    <solid android:color="#c5c5ff"/>-->
<!--    <corners android:radius="14dp"/>-->

    <item>
        <shape android:shape="rectangle">

            <solid android:color="#ceceff"/>
            <padding
                android:left="10dp"
                android:top="10dp" />

            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>
        <shape>
            <!-- set the shadow color  -->
            <stroke
                android:width="6dp"
                android:color="#7000" />

            <!-- setting the thickness of shadow  -->

            <padding
                android:bottom="4dp"
                android:left="-6dp"
                android:right="4dp"
                android:top="-6dp" />

            <corners android:radius="10dp" />
        </shape>
    </item>


    <!-- Background -->



    <item>
        <shape>
            <solid android:color="#c5c5ff" />
            <corners android:radius="14dp" />
        </shape>
    </item>

</layer-list>